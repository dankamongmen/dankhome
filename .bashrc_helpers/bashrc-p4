if [ -d "$HOME/local/p4/bin" ] ; then
	export PATH="$HOME/local/p4/bin:$PATH"
	if [ -n "$PATH" ] ; then
		export PATH=$PATH:$HOME/local/p4/bin
	else
		export PATH=$HOME/local/p4/bin
	fi
	# P4 will look for a file by this name in the root of your client
	# workspace. If it's found, P4 will use its variable definitions.
	export P4RCACHE=$HOME/var/cache/p4rcache
	export P4CONFIG=.p4rc
	export P4USER=nblack
fi

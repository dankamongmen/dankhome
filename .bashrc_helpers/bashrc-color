if [ -r $HOME/.pcolor ] ; then
	PCOLOR=`cat $HOME/.pcolor`
else
	PCOLOR=white
fi

if [ -x "$HOME/bin/color" ] ; then
	case $TERM in
	xterm*)
		# http://www.faqs.org/docs/Linux-mini/Xterm-Title.html#ss4.3
		export PS1='\[\033]0;\u@\h\007\]'`color -p $PCOLOR`'[\h]($?) \$'`color -p none`' '
		;;
	*)
		export PS1=`color -p $PCOLOR`'[\h]($?) \$'`color -p none`' '
		;;
	esac
else
	export PS1='[\h]($?) \$ '
fi

unset PCOLOR

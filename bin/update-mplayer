#!/bin/sh

set -e || exit 1

SVN=svn://svn.mplayerhq.hu/mplayer/trunk

if ! grep "$SVN" .svn/entries > /dev/null 2>&1 ; then
	echo "We don't appear to be in an mplayer checkout."
	echo "To check out mplayer, run svn co $SVN"
	exit 1
fi

svn-clean
svn up

DEB_BUILD_OPTIONS="--enable-gui --enable-menu --enable-xvmc --disable-ossaudio" fakeroot debian/rules clean
DEB_BUILD_OPTIONS="--enable-gui --enable-menu --enable-xvmc --disable-ossaudio" fakeroot debian/rules binary
sudo dpkg -i ../mplayer*deb # FIXME
rm ../mplayer*deb

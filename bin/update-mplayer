#!/bin/sh

set -e || exit 1

SVN=svn://svn.mplayerhq.hu/mplayer/trunk

if ! svn info 2> /dev/null > /dev/null 2>&1 ; then
	echo "We don't appear to be in an mplayer checkout."
	echo "To check out mplayer, run svn co $SVN"
	exit 1
fi

svn-clean
svn up
rm -rf ffmpeg

DEB_BUILD_OPTIONS="--disable-dga1 --disable-dga2 --enable-gui --enable-menu --disable-ossaudio --enable-tv-v4l2" fakeroot debian/rules
DEB_BUILD_OPTIONS="--disable-dga1 --disable-dga2 --enable-gui --enable-menu --disable-ossaudio --enable-tv-v4l2" fakeroot debian/rules binary
sudo dpkg -i ../mplayer*deb # FIXME
rm ../mplayer*deb

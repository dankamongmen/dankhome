#!/bin/sh

set -e || exit 1

usage () { echo "usage: `basename $0` outputdir" ; }
usageerr () { usage >&2 ; exit 1 ; }

FB=fbcmd

[ $# -eq 1 ] || usageerr

OUTDIR="$1"

FRIENDS=`$FB friends | cut -d\  -f1`
echo "Found `echo $FRIENDS | wc -w` friends"
for i in $FRIENDS ; do
	echo "Acquiring pictures for $i..."
	[ -d "$OUTDIR/$i" ] || mkdir "$OUTDIR/$i"
	$FB OPICS "$i" -of='[oname]/[aid]-[pid].jpg' -ppsize=1
done

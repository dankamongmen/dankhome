user "dank"
id3v1_encoding "utf8"
filesystem_charset "UTF-8"
follow_outside_symlinks "yes"
music_directory "/media/ghettostore/music"
#music_directory "/home/dank/Music"
playlist_directory "/media/ghettostore/playlists"
db_file "/home/dank/var/lib/mpd/database"
log_file "/home/dank/var/log/mpd.log"
pid_file "/home/dank/var/lib/mpd/pidlock"
state_file "/home/dank/var/lib/mpd/statefile"
sticker_file "/home/dank/var/lib/mpd/stickerfile"
bind_to_address "127.0.0.1"

zeroconf_enabled "yes"
zeroconf_name "recombinator_mpd"

samplerate_converter "Best Sinc"
buffer_before_play "20%"
#metadata_to_use none
# See http://www.pulseaudio.org/wiki/PerfectSetup
audio_output {
	type "pulse"
	name "PulseAudio"
}
#audio_output {
#	type "alsa"
#	name "Intel HDAudio ALSA"
#	buffer_time "2000000"
#	use_mmap "yes"
#	device "hw:0,0"
	# Default resamples at 48k, despite 44.1k natural rate
	#device "default"
#}
#mixer_type "alsa"
#mixer_device "dmix"
#mixer_control "Master"

# fifo output (ncmpcpp visualizations, etc)
audio_output {
	type "fifo"
	name "mpdfifo"
	path "/home/dank/var/lib/mpd/fifo"
} 
